{
  "manifest_version": 3,
  "name": "Markdown Reader Extension",
  "version": "1.0.0",
  "description": "Affiche les fichiers markdown (.md) dans un format lisible directement dans Chrome",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["file://*/*.md", "file://*/*.markdown"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html"
}

